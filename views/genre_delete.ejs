<%- include('layout') %>

<div class="content">
  <h1><%= title %>: <%= genre._id %></h1>

  <% if (books_in_genre.length > 0) { %>
       <p><strong>Delete the following book instances before attempting to delete this genre.</strong></p>
    <div style="margin-left:20px;margin-top:20px">
      <h4>Book Instances</h4>
      <dl>
        <% books_in_genre.forEach(function(instance) { %>
          <dt><a href="<%= instance.url %>"><%= instance._id %></a></dt>
          <dd><%= instance.status %></dd>
          <dd><%= instance.imprint %></dd>
        <% }); %>
      </dl>
    </div>
  <% } else { %>
    <p>Do you really want to delete this Genre?</p>
    <form method="POST">
        <div class="form-group">
            <input
            id="genreid"
            class="form-control"
            type="hidden"
            name="genreid"
            value="<%= genre._id %>"
            />
        </div>
        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
    <% } %>
</div>
