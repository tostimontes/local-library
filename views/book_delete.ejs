<%- include('layout') %>

<div class="content">
  <h1><%= title %>: <%= book._id %></h1>

  <% if (book_instances.length > 0) { %>
       <p><strong>Delete the following book instances before attempting to delete this book instance.</strong></p>
    <div style="margin-left:20px;margin-top:20px">
      <h4>Book Instances</h4>
      <dl>
        <% book_instances.forEach(function(instance) { %>
          <dt><a href="<%= instance.url %>"><%= instance._id %></a></dt>
          <dd><%= instance.status %></dd>
          <dd><%= instance.imprint %></dd>
        <% }); %>
      </dl>
    </div>
  <% } else { %>
    <p>Do you really want to delete this Book?</p>
    <form method="POST">
        <div class="form-group">
            <input
            id="bookid"
            class="form-control"
            type="hidden"
            name="bookid"
            value="<%= book._id %>"
            />
        </div>
        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
    <% } %>
</div>
